@page "/gallery/{Id:long}"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@using Gpusoft.Apps.VibeGallery.Client.Models
@inject HttpClient Http
@inject IJSRuntime JS
@implements IAsyncDisposable

<PageTitle>@(_galleryName ?? "Gallery")</PageTitle>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Galleries</a></li>
        <li class="breadcrumb-item active" aria-current="page">@(_galleryName ?? $"Gallery {Id}")</li>
    </ol>
</nav>

@if (_galleryName is null)
{
    <h1 class="mb-2 placeholder-glow"><span class="placeholder col-4"></span></h1>
    <p class="text-muted placeholder-glow"><span class="placeholder col-2"></span></p>
    <div class="gallery-grid">
        @for (var i = 0; i < 12; i++)
        {
            <div class="gallery-grid-item placeholder-glow">
                <span class="placeholder w-100" style="height: 200px; display: block; border-radius: .375rem;"></span>
            </div>
        }
    </div>
}
else
{
    <div class="mb-3">
        <h1 class="mb-1">@_galleryName</h1>
        @if (!string.IsNullOrWhiteSpace(_galleryDescription))
        {
            <p class="text-muted mb-0">@_galleryDescription</p>
        }
    </div>

    @if (_items.Count == 0 && !_hasMore)
    {
        <div class="text-center py-5">
            <h4 class="text-muted">No media in this gallery</h4>
        </div>
    }
    else
    {
        <div class="gallery-grid">
            @for (var i = 0; i < _items.Count; i++)
            {
                var index = i;
                var item = _items[i];
                <div class="gallery-grid-item" @onclick="() => OpenFullscreen(index)">
                    @if (item.Type == "Video")
                    {
                        <div class="video-badge">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="m11.596 8.697-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393"/>
                            </svg>
                        </div>
                    }
                    <img src="/api/media/@item.Id/thumbnail"
                         alt="Media @item.Id"
                         loading="lazy" />
                </div>
            }
        </div>

        <div @ref="_sentinelRef" class="scroll-sentinel">
            @if (_isLoading)
            {
                <div class="d-flex justify-content-center py-4">
                    <div class="spinner-border text-secondary" role="status">
                        <span class="visually-hidden">Loading…</span>
                    </div>
                </div>
            }
        </div>

        <p class="text-center text-muted small mt-2">
            @_items.Count of @_totalCount
        </p>
    }
}

@if (_fullscreenIndex is not null && _items.Count > 0)
{
    <div class="lightbox-overlay" @onclick="CloseFullscreen" @onkeydown="OnKeyDownAsync" tabindex="0" @ref="_lightboxRef">
        <button class="lightbox-close" @onclick="CloseFullscreen" aria-label="Close">&times;</button>

        <div class="lightbox-nav lightbox-nav-left"
             @onclick="PreviousMedia" @onclick:stopPropagation="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0"/>
            </svg>
        </div>

        <div class="lightbox-content" @onclick:stopPropagation="true">
            @{
                var current = _items[_fullscreenIndex.Value];
            }
            @if (current.Type == "Video")
            {
                <video src="/api/media/@current.Id/file"
                       controls autoplay
                       class="lightbox-media" />
            }
            else
            {
                <img src="/api/media/@current.Id/file"
                     alt="Media @current.Id"
                     class="lightbox-media" />
            }
        </div>

        <div class="lightbox-nav lightbox-nav-right"
             @onclick="NextMediaAsync" @onclick:stopPropagation="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708"/>
            </svg>
        </div>

        <div class="lightbox-counter" @onclick:stopPropagation="true">
            @(_fullscreenIndex.Value + 1) / @_totalCount
        </div>
    </div>
}

@code {
    private const int BatchSize = 48;

    [Parameter]
    public long Id { get; set; }

    private string? _galleryName;
    private string? _galleryDescription;
    private int _totalCount;
    private readonly List<GalleryMediaItem> _items = [];
    private int _nextPage = 1;
    private bool _isLoading;
    private bool _hasMore = true;
    private int? _fullscreenIndex;
    private ElementReference _lightboxRef;
    private ElementReference _sentinelRef;
    private IJSObjectReference? _jsModule;
    private DotNetObjectReference<GalleryDetail>? _dotNetRef;
    private bool _observerAttached;

    protected override async Task OnInitializedAsync()
    {
        await LoadNextBatchAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _jsModule = await JS.InvokeAsync<IJSObjectReference>(
                "import", "./js/gallery-detail.js");
            _dotNetRef = DotNetObjectReference.Create(this);
        }

        if (!_observerAttached && _jsModule is not null && _galleryName is not null && _items.Count > 0)
        {
            _observerAttached = true;
            await _jsModule.InvokeVoidAsync("observeSentinel", _sentinelRef, _dotNetRef);
        }

        if (_fullscreenIndex is not null)
        {
            await _lightboxRef.FocusAsync();
        }
    }

    /// <summary>
    /// Called from JS when the scroll sentinel becomes visible.
    /// </summary>
    [JSInvokable]
    public async Task LoadMoreItems()
    {
        if (_isLoading || !_hasMore) return;

        await LoadNextBatchAsync();
        StateHasChanged();
    }

    private async Task LoadNextBatchAsync()
    {
        if (_isLoading || !_hasMore) return;
        _isLoading = true;

        var response = await Http.GetFromJsonAsync<GalleryDetailResponse>(
            $"/api/galleries/{Id}?page={_nextPage}&pageSize={BatchSize}");

        if (response is not null)
        {
            if (_galleryName is null)
            {
                _galleryName = response.Name;
                _galleryDescription = response.Description;
            }

            _totalCount = response.TotalCount;
            _items.AddRange(response.Items);
            _hasMore = _items.Count < _totalCount;
            _nextPage++;
        }

        _isLoading = false;
    }

    private void OpenFullscreen(int index)
    {
        _fullscreenIndex = index;
    }

    private void CloseFullscreen()
    {
        _fullscreenIndex = null;
    }

    private void PreviousMedia()
    {
        if (_fullscreenIndex is > 0)
        {
            _fullscreenIndex--;
        }
    }

    private async Task NextMediaAsync()
    {
        if (_fullscreenIndex is null) return;

        if (_fullscreenIndex < _items.Count - 1)
        {
            _fullscreenIndex++;
        }
        else if (_hasMore)
        {
            await LoadNextBatchAsync();
            if (_fullscreenIndex < _items.Count - 1)
            {
                _fullscreenIndex++;
            }
        }

        // Pre-fetch when approaching the end of loaded items
        if (_hasMore && _fullscreenIndex >= _items.Count - 5)
        {
            await LoadNextBatchAsync();
        }
    }

    private async Task OnKeyDownAsync(KeyboardEventArgs e)
    {
        switch (e.Key)
        {
            case "Escape":
                CloseFullscreen();
                break;
            case "ArrowLeft":
                PreviousMedia();
                break;
            case "ArrowRight":
                await NextMediaAsync();
                break;
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (_jsModule is not null)
        {
            try
            {
                await _jsModule.InvokeVoidAsync("dispose");
                await _jsModule.DisposeAsync();
            }
            catch (JSDisconnectedException)
            {
                // Circuit already disconnected during navigation
            }
        }

        _dotNetRef?.Dispose();
    }
}
